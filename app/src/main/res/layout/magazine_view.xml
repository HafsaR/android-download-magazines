<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/magview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/headerYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="Year 2018 magazines"
            android:textColor="#373E4A" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/magviewrv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headerYear"
            android:background="#F5F5F5"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>


</RelativeLayout>